<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/bootstrap.min.css">
    <link rel="stylesheet" href="css/style.css">

    <title>Piyush World</title>
</head>

<body>
    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top d-flex align-items-center">
        <div class="container d-flex align-items-center justify-content-between">

            <div class="logo">
                <h1 class="text-light"><a href="/"><span>Piyush World</span></a></h1>
                <!-- Uncomment below if you prefer to use an image logo -->
                {{!-- <a href="index.html"><img src="img/logo.png" alt="" class="img-fluid"></a> --}}
            </div>

            {{>nav}}

        </div>
    </header><!-- End Header -->
    <!-- ======= Hero Section ======= -->
    <section id="hero" class="d-flex align-items-center">

        <div class="container">
            <div class="row gy-4">
                <div class="col-lg-6 order-2 order-lg-1 d-flex flex-column justify-content-center">
                    <h1>WE WILL HELP YOU TO</h1>
                    <h1>GROW YOUR BUSINESS</h1>
                    <h2>We are team of <b>Professional Developer </b></h2>
                    <div>
                        <a href="#about" class="btn-get-started scrollto">Read More</a>
                    </div>

                </div>
                <div class="col-lg-6 order-1 order-lg-2 hero-img">
                    <img src="img/hero-img.svg" class="img-fluid animated" alt="heroSection Image">
                </div>
            </div>
        </div>

    </section><!-- End Hero -->
    <main id="main">

        <!-- ======= About Section ======= -->
        {{>about}}
        <!-- End About Section -->


        <!-- ======= Services Section ======= -->
        {{>service}}
        <!-- End Services Section -->


        <!-- ======= Contact Us Section ======= -->
        {{>contact}}
        <!-- End Contact Us Section -->

    </main><!-- End #main -->

    <!-- ======= Footer ======= -->
    {{>footer}}
    <!-- End Footer -->
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
            class="bi bi-arrow-up-short"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="18"
                fill="currentColor" class="bi bi-arrow-up-short" viewBox="0 0 16 16">
                <path fill-rule="evenodd"
                    d="M8 12a.5.5 0 0 0 .5-.5V5.707l2.146 2.147a.5.5 0 0 0 .708-.708l-3-3a.5.5 0 0 0-.708 0l-3 3a.5.5 0 1 0 .708.708L7.5 5.707V11.5a.5.5 0 0 0 .5.5z" />
            </svg></i></a>
    <script src="js/main.js"></script>
    <script src="../jq/jquery.js" type="text/javascript"></script>
    <script src="../js/bootstrap.js" type="text/javascript"></script>

</body>

</html>